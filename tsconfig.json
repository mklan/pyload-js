{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib"
  },
  "lib": ["es2015"],
  "typeRoots": ["node_modules/@types"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
